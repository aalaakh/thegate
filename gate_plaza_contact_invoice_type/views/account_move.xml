<odoo>
    <data>

        <record id="contact_invoive_type_view_move_form_inherited_2" model="ir.ui.view">
            <field name="name">contact.invoive.type.view.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="partner_invoicing_check" invisible="1"/>
                <field name="partner_percent" attrs="{'invisible': [('partner_invoicing_check', '=', False)]}"/>
              </xpath>
            </field>
        </record>

        <record id="contact_invoive_type_view_move_form_inherited" model="ir.ui.view">
            <field name="name">contact.invoive.type.view.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
              <xpath expr="//tree//field[@name='account_id']" position="after">
                <field name="customer_amount" attrs="{'column_invisible': [('parent.partner_invoicing_check', '=', False)]}"/>
                <field name="partner_percent" attrs="{'column_invisible': [('parent.partner_invoicing_check', '=', False)]}"/>
              </xpath>
            </field>
        </record>

        <record id="contact_invoive_type_view_move_form" model="ir.ui.view">
            <field name="name">contact.invoive.type.view.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@id='aml_tab']//tree" position="inside">
                <field name="customer_amount" invisible="1"/>
                <field name="partner_percent" invisible="1"/>
              </xpath>
            </field>
        </record>

    </data>
</odoo>
